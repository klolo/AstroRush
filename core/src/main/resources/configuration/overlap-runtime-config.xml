<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!-- Converters -->
    <bean id="mainItemVOToIGameObjectConverter"
          class="com.astro.core.overlap_runtime.converters.MainItemVOToIGameObjectConverter"/>
    <bean id="simpleImageVOToIGameObjectConverter"
          class="com.astro.core.overlap_runtime.converters.SimpleImageVOToIGameObjectConverter"/>
    <bean id="particleEffectVOToIGameObjectConverter"
          class="com.astro.core.overlap_runtime.converters.ParticleEffectVOToIGameObjectConverter"/>
    <bean id="labelVOToIGameObjectConverter"
          class="com.astro.core.overlap_runtime.converters.LabelVOToIGameObjectConverter"/>

    <!-- Loaders fo scene reader -->
    <bean id="particleEffectsLoader" class="com.astro.core.overlap_runtime.loaders.ParticleEffectsLoader">
        <property name="pixelPerMeter" value="${renderer.pixel.per.meter}"/>
    </bean>

    <bean id="lightsLoader" class="com.astro.core.overlap_runtime.loaders.LightsLoader">
        <property name="lightDistance" value="${renderer.light.distance}"/>
        <property name="pixelPerMeter" value="${renderer.pixel.per.meter}"/>
    </bean>

    <bean id="spriteAnimationsLoader" class="com.astro.core.overlap_runtime.loaders.SpriteAnimationsLoader"/>

    <bean id="labelsLoader" class="com.astro.core.overlap_runtime.loaders.LabelsLoader"/>

    <bean id="componentLoader" class="com.astro.core.overlap_runtime.loaders.ComponentLoader"/>

    <!-- Loader of all scenes -->
    <bean id="overlapSceneReader" class="com.astro.core.overlap_runtime.OverlapSceneReader"/>

</beans>