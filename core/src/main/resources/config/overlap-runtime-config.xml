<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!-- Converters -->
    <bean id="mainItemVOToIGameObjectConverter"
          class="com.astro.game.overlap_runtime.converters.MainItemVOToIGameObjectConverter"/>
    <bean id="simpleImageVOToIGameObjectConverter"
          class="com.astro.game.overlap_runtime.converters.SimpleImageVOToIGameObjectConverter"/>
    <bean id="particleEffectVOToIGameObjectConverter"
          class="com.astro.game.overlap_runtime.converters.ParticleEffectVOToIGameObjectConverter"/>
    <bean id="labelVOToIGameObjectConverter"
          class="com.astro.game.overlap_runtime.converters.LabelVOToIGameObjectConverter"/>

    <!-- Loaders fo scene reader -->
    <bean id="baseLoader" class="com.astro.game.overlap_runtime.loaders.BaseLoader"/>
    <bean id="particleEffectsLoader" class="com.astro.game.overlap_runtime.loaders.ParticleEffectsLoader"/>
    <bean id="lightsLoader" class="com.astro.game.overlap_runtime.loaders.LightsLoader" parent="baseLoader"/>
    <bean id="spriteAnimationsLoader" class="com.astro.game.overlap_runtime.loaders.SpriteAnimationsLoader"/>
    <bean id="labelsLoader" class="com.astro.game.overlap_runtime.loaders.LabelsLoader"/>
    <bean id="componentLoader" class="com.astro.game.overlap_runtime.loaders.ComponentLoader"/>

    <!-- Loader of all scenes -->
    <bean id="overlapSceneReader" class="com.astro.game.overlap_runtime.OverlapSceneReader"/>

    <!-- Loaders fo scene reader -->
    <bean id="stageFactory" class="com.astro.game.engine.stage.StageFactory"/>

</beans>